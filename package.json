{
    "name": "kinder-project",
    "version": "0.0.1",
    "description": "Backend for Kinder Harry Potter project",
    "main": "server.js",
    "scripts": {
        "set-dev": "cp .env.development ./dist/.env",
        "set-prod": "cp .env.production ./dist/.env",
        "start": "npm run serve",
        "build:dev": "npm run build-ts && npm run set-dev",
        "build:prod": "npm run build-ts && npm run set-prod",
        "serve": "node dist/server.js",
        "test": "jest --coverage=false --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" && npm run set-dev",
        "watch-node": "nodemon dist/server.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "eslint src/*.ts",
        "lint-fix": "yarn lint --fix",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "typecheck": "tsc --noEmit",
        "run-prettier": "prettier src/*.ts",
        "validate-prettiness": "yarn run-prettier -c",
        "make-prettier": "yarn run-prettier --write"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@typegoose/typegoose": "^12.4.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.16.2",
        "express-async-handler": "^1.2.0",
        "http-errors": "^1.7.1",
        "mongoose": "^8.3.3",
        "morgan": "^1.9.1",
        "multer": "^1.4.5-lts.1",
        "node-fetch": "^2.7.0",
        "pug": "^3.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "4.17.21",
        "@types/http-errors": "1.8.2",
        "@types/jest": "26.0.24",
        "@types/morgan": "1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "14.18.63",
        "@types/node-fetch": "^2.6.11",
        "@types/supertest": "2.0.16",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "colors": "^1.4.0",
        "concurrently": "6.5.1",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.10.0",
        "eslint-plugin-import": "2.29.1",
        "jest": "26.6.3",
        "nodemon": "2.0.22",
        "prettier": "2.8.8",
        "supertest": "6.3.3",
        "ts-jest": "26.5.6",
        "typescript": "4.9.5"
    }
}
